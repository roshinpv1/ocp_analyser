{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./out",
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": false
  },
  "include": [
    "*.js",
    "*.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "out",
    "**/*.test.js",
    "**/*.test.ts"
  ]
} 