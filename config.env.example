# OCP Analyser Configuration Example
# Copy this file to .env and update with your settings

# ChromaDB Configuration
# Set to 'true' to enable ChromaDB storage, 'false' to disable
USE_CHROMADB=true

# ChromaDB Storage Directory (only used if USE_CHROMADB=true)
CHROMADB_PERSIST_DIR=./chroma_db

# ChromaDB Collection Names
CHROMADB_ANALYSIS_COLLECTION=analysis_reports
CHROMADB_OCP_COLLECTION=ocp_assessments

# Local Embedding Configuration
# Set to 'true' to use local embedding models instead of API-based embeddings
USE_LOCAL_EMBEDDINGS=false

# Local embedding model name (only used if USE_LOCAL_EMBEDDINGS=true)
LOCAL_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Directory to cache the downloaded embedding model
LOCAL_MODEL_CACHE_DIR=./model_cache

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Output Configuration
DEFAULT_OUTPUT_DIR=./out

# Project Configuration
DEFAULT_PROJECT_NAME=Unknown Project 